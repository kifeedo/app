table.table.table-bordered.table-striped
	thead.thead-light
		tr.hidden-sm.hidden-xs.hidden-md.hidden-lg
			form#form-lot-actions(action=`/admin/${schema}/confirm/` method=POST)
				div#actions-lot
					p
						label(for="select-lot-actions") Actions par lot :&nbsp;
						select#action-lot-select(name="select-lot-actions")
							option(value="null") ----
							option(value="delete") Supprimer
						input#lot-ids(type="hidden",name="ids",value="")
						input#submit-action(type="submit",name="submit-lot-actions",value="Soumettre")
			form#form-search(action="javascript:void(0);",method='GET')
				div#actions-search
					p
						label(for="search") Filtre :&nbsp;
						input#search(type="text",ng-model="search",placeholder="Rechercher")
			p#nb-elt-sel
				
		tr.table-admin-head
			
			td.add
				form#formadd(action=`/admin/${schema}/` method=GET)
					input(type='submit',id="addform",value="Ajouter")
		tr.table-admin-head
			th.checkselect
			each field in fields
				th(id=`th-${field}`)= field

			th#actions(colspan="2") actions

	each elt in liste
		tr.ligne
			td.check.text-center
				input(type="checkbox",id="check-`${elt['id']}")
			each field in fields
				td(id=`td-${field}-${elt['id']}`,class=`td-${field}`) #{elt[field]}
			td.edit
				a(href=`/admin/${schema}/${elt['id']}/`,id=`edit-${elt['id']}`) Editer
			td.delete
				a(href=`/admin/delete/${schema}/${elt['id']}/`,id=`delete-${elt['id']}`) Supprimer	 